<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.newsreader.MainActivity">


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/navgroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:background="@mipmap/tab_background"
        android:gravity="center_vertical"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radioButton1"
            style="@style/tab_item_style"
            android:background="@drawable/selector_tab_background"
            android:textColor="@color/selector_tab_1"
            android:text="国内"
            />

        <RadioButton
            android:id="@+id/radioButton2"
            style="@style/tab_item_style"
            android:background="@drawable/selector_tab_background"
            android:textColor="@color/selector_tab_1"
            android:text="国际"
             />

        <RadioButton
            android:id="@+id/radioButton3"
            style="@style/tab_item_style"
            android:background="@drawable/selector_tab_background"
            android:textColor="@color/selector_tab_1"
            android:text="军事"
             />

        <RadioButton
            android:id="@+id/radioButton4"
            style="@style/tab_item_style"
            android:background="@drawable/selector_tab_background"
            android:textColor="@color/selector_tab_1"
            android:text="财经"
            />
        <RadioButton
            android:id="@+id/radioButton5"
            style="@style/tab_item_style"
            android:background="@drawable/selector_tab_background"
            android:drawableRight="@drawable/selector_tab_4"

            />
    </RadioGroup>
</LinearLayout>
